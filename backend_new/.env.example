# Variables de entorno para el sistema de gestión agrícola

# Configuración general
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Base de datos (descomenta la que uses)
# Para PostgreSQL (producción)
# DATABASE_URL=postgresql://username:password@localhost:5432/sistema_agricola

# Para SQLite (desarrollo local)
DATABASE_URL=sqlite:///sistema_agricola.db

# API externa para clima (opcional)
WEATHER_API_KEY=your-weather-api-key

# Configuración de archivos
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes

# Configuración del servidor
HOST=0.0.0.0
PORT=5000
