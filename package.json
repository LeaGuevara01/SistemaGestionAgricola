{
  "name": "sistema-gestion-agricola",
  "scripts": {
    "dev": "docker-compose up -d",
    "dev:local": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd sistema_gestion_agricola && python run.py",
    "build": "cd frontend && npm run build && npm run copy-to-flask",
    "deploy": "npm run build && git add . && git commit -m \"Deploy $(date)\" && git push origin main",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "clean": "docker-compose down -v && docker system prune -f"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}